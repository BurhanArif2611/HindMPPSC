<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".activity.Live_Classes.PaymentActivity">
<include layout="@layout/tool_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tool_barLayout"
        android:layout_margin="@dimen/_10sdp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5sdp"
            android:elevation="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/phone_pay_cardview">>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_margin="@dimen/_10sdp"
                android:weightSum="5">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone_pay"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Phone Pay"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/text_size_20"
                    android:textColor="@color/primary_text"
                    android:layout_gravity="start|center"
                    android:gravity="start"
                    android:layout_weight="3"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone_pay_img"
                    android:src="@drawable/ic_uncheck"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5sdp"
            android:elevation="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/paytm_cardview">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_margin="@dimen/_10sdp"
                android:weightSum="5">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_paytm"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Paytm"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/text_size_20"
                    android:textColor="@color/primary_text"
                    android:layout_gravity="start|center"
                    android:gravity="start"
                    android:layout_weight="3"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/paytm_img"
                    android:src="@drawable/ic_uncheck"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5sdp"
            android:elevation="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/gpay_cardview">>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_margin="@dimen/_10sdp"
                android:weightSum="5">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_gpay"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="G Pay"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/text_size_20"
                    android:textColor="@color/primary_text"
                    android:layout_gravity="start|center"
                    android:gravity="start"
                    android:layout_weight="3"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/gpay_img"
                    android:src="@drawable/ic_uncheck"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5sdp"
            android:elevation="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/cod_cardview">>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_margin="@dimen/_10sdp"
                android:weightSum="5">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cod"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="COD"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/text_size_20"
                    android:textColor="@color/primary_text"
                    android:layout_gravity="start|center"
                    android:gravity="start"
                    android:layout_weight="3"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cod_img"
                    android:src="@drawable/ic_uncheck"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:text="Proceed To Pay"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_20sdp"
        android:id="@+id/proceed_pay_btn"/>
</RelativeLayout>