<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AnswerFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:id="@+id/scroll_ecr"
        android:layout_above="@+id/bottom_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            app:cardCornerRadius="@dimen/_15sdp"
            android:elevation="@dimen/_8sdp"
            android:layout_margin="@dimen/_8sdp"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/ic_left_white_box"
            android:weightSum="2"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_margin="@dimen/_5sdp"
                android:id="@+id/question_tv"
                android:textColor="@color/primary_text"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/text_size_22"
                tools:text="@string/app_name"/>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/radio_group_id">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_5sdp"
                    android:id="@+id/first_layout"
                    android:background="@drawable/background_corners_white">

                    <TextView
                        android:id="@+id/option_first_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_circle"
                        android:gravity="center"
                        android:textColor="@color/white"
                        tools:text="A"
                        android:layout_margin="@dimen/_3sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:id="@+id/radio_first"
                    android:textSize="@dimen/text_size_18"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_regular"
                    tools:text="@string/app_name"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/second_layout"
                    android:background="@drawable/background_corners_white">

                    <TextView
                        android:id="@+id/option_second_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_circle"
                        android:gravity="center"
                        android:textColor="@color/white"
                        tools:text="A"
                        android:layout_margin="@dimen/_3sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:id="@+id/radio_second"
                    android:textSize="@dimen/text_size_18"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginLeft="@dimen/_5sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/third_layout"
                    android:background="@drawable/background_corners_white">

                    <TextView
                        android:id="@+id/option_third_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_circle"
                        android:gravity="center"
                        android:textColor="@color/white"
                        tools:text="A"
                        android:layout_margin="@dimen/_3sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:id="@+id/radio_third"
                    android:textSize="@dimen/text_size_18"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginLeft="@dimen/_5sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/fourth_layout"
                    android:background="@drawable/background_corners_white">

                    <TextView
                        android:id="@+id/option_fourth_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_circle"
                        android:gravity="center"
                        android:textColor="@color/white"
                        tools:text="A"
                        android:layout_margin="@dimen/_3sdp"/>

                    <TextView
                        android:id="@+id/radio_fourth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_18" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_layout">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:background="@drawable/ic_corner_colour"
            android:textColor="@color/white"
            android:layout_margin="@dimen/_3sdp"
            android:id="@+id/done_btn"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="@dimen/_5sdp"
            android:layout_alignParentBottom="true">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Preview"
                android:background="@drawable/ic_corner"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_back_arrow"
                android:layout_weight="1"
                android:layout_margin="@dimen/_3sdp"
                android:id="@+id/preview_btn"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:background="@drawable/corner_white"
                android:textColor="@color/primary_text"
                android:drawableRight="@drawable/ic_right_arraw"
                android:layout_weight="1"
                android:layout_margin="@dimen/_3sdp"
                android:id="@+id/next_btn"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>