<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".activity.Prelims_Video_Course.MockTestResultActivity">
<include layout="@layout/tool_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_barLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:elevation="@dimen/_8sdp"
        android:layout_margin="@dimen/_8sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_left_white_box"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:weightSum="2"
            android:id="@+id/live_course_layout">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Are You \n Ready!!"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_20"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_book" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:src="@drawable/ic_user"
                app:civ_border_width="@dimen/_1sdp"
                app:civ_border_color="@color/white"
                android:id="@+id/user_pic_img"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/primary_text"/>



                <TextView
                    android:id="@+id/name_etv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Name"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_gravity="center_vertical|center"
                    android:background="@drawable/background_corners_white"
                    android:inputType="textEmailAddress"
                    android:gravity="start|center"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/primary_text"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Question"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/primary_text"/>



                <TextView
                    android:id="@+id/total_question_etv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="50 Question"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_gravity="center_vertical|center"
                    android:background="@drawable/background_corners_white"
                    android:inputType="textEmailAddress"
                    android:gravity="start|center"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/primary_text"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attempt Question"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/primary_text"/>



                <TextView
                    android:id="@+id/attempt_question_etv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="35"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_gravity="center_vertical|center"
                    android:background="@drawable/background_corners_white"
                    android:inputType="textEmailAddress"
                    android:gravity="start|center"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/primary_text"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right Question"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/primary_text"/>



                <TextView
                    android:id="@+id/right_question_etv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="35"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_gravity="center_vertical|center"
                    android:background="@drawable/background_corners_white"
                    android:inputType="textEmailAddress"
                    android:gravity="start|center"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/primary_text"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_10sdp"/>


            <Button
                android:id="@+id/answer_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/background_button_colour"
                android:fontFamily="@font/poppins_semibold"
                android:text="Answer"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>